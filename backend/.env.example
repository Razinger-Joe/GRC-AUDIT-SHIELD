# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/grc_audit_shield
# For Railway, use: postgresql://postgres:password@postgres:5432/grc_audit_shield

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:8080", "http://localhost:5173", "https://your-frontend-domain.vercel.app"]

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".xlsx", ".jpg", ".png", ".zip"]

# Storage Configuration (local or s3)
STORAGE_TYPE=local  # Options: local, s3
# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=grc-audit-shield

# Redis Configuration (for background jobs)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@grc-audit-shield.com

# Application Settings
APP_NAME=GRC Audit Shield
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
